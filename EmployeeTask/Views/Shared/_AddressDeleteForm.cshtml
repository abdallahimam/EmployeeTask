@model EmployeeTask.Models.AddressEdit


<div class="modal fade" id="deleteAddress@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelDeleteAddress@(Model.Id)" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabelDeleteAddress@(Model.Id)">Delete Address (@Model.Description)</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="DeleteAddress" asp-route-id="@(Model.Id)" asp-controller="Employee">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <input asp-for="Id" type="hidden" />
                        <p class="text-muted">are you sure, you want to delete Address?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button id="deleteEmployeeAddress@(Model.Id)" data-addressId="@(Model.Id)" type="submit" class="btn btn-primary delete-address">Delete Address</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
