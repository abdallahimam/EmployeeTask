@model EmployeeTask.Models.EmployeeEdit


<div class="modal fade" id="editEmployee@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelEdit@(Model.Id)" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabelEdit@(Model.Id)">Edit Employee (@Model.Name)</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Update" asp-route-id="@(Model.Id)" asp-controller="Employee">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <input asp-for="Id" type="hidden" />
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" id="name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Age" class="form-label"></label>
                        <input asp-for="Age" class="form-control" id="age">
                        <span class="text-danger" asp-validation-for="Age"></span>
                    </div>
